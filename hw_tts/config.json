{
  "name": "default_config",
  "n_gpu": 1,
  "arch": {
    "type": "Generator",
    "args": {
      "upsample_rates" : [8,8,2,2],
      "upsample_kernel_sizes": [16,16,4,4],
      "upsample_init_channel": 512,
      "resblock_kernel_sizes": [3,7,11],
      "resblock_dilation_sizes": [[1,3,5], [1,3,5], [1,3,5]]
}
  },
  "mpd": {
    "type" : "MultiPDiscriminator",
    "args" : {}
  },
  "msd": {
    "type" : "MultiSDiscriminator",
    "args" : {}
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "train",
            "max_audio_length": 20.0
          }
        }
      ]
    },
    "eval": {
      "batch_size": 1,
      "num_workers": 5,
      "datasets": [
        {
          "type": "CustomDirAudioDataset",
          "args": {
            "audio_dir": "test_data/"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "betas": [
        0.8,
        0.99
      ]
    }
  },
  "optimizer_d": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "betas": [
        0.8,
        0.99
      ]
    }
  },
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.999
    }
  },
  "trainer": {
    "epochs": 200,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "vocoder_project",
    "len_epoch": 200,
    "grad_norm_clip": 10.0
  }
}
